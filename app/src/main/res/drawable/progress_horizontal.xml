<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip"/>
            <gradient
                android:angle="270"
                android:centerColor="#33890909"
                android:centerY="0.75"
                android:endColor="#33890909"
                android:startColor="#33890909"/>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip"/>
                <gradient
                    android:angle="270"
                    android:centerColor="#80ffb600"
                    android:centerY="0.75"
                    android:endColor="#a0ffcb00"
                    android:startColor="#80ffd300"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <layer-list>
            <item>
                <clip>
                    <shape>
                        <corners android:radius="5dip"/>
                        <gradient
                            android:angle="270"
                            android:centerColor="#4a90e2"
                            android:centerY="0.75"
                            android:endColor="#4a90e2"
                            android:startColor="#4a90e2"/>
                    </shape>
                </clip>
            </item>
            <item android:right="10dp">
                <clip>
                    <shape>
                        <corners android:radius="5dip"/>
                        <gradient
                            android:angle="270"
                            android:centerColor="#e24a68"
                            android:centerY="0.75"
                            android:endColor="#e24a68"
                            android:startColor="#e24a68"/>
                    </shape>
                </clip>
            </item>
        </layer-list>
    </item>

</layer-list>

